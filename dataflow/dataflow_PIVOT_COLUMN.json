{
	"name": "dataflow_PIVOT_COLUMN",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "SQLDB_CLOUD",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "pivot1"
				},
				{
					"name": "cast1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          YEAR as string,",
				"          ACCOUNT as string,",
				"          MONTHSNAME as string,",
				"          AMOUNT as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source1",
				"cast1 pivot(groupBy(YEAR,",
				"          ACCOUNT),",
				"     pivotBy(MONTHSNAME),",
				"     AMOUNT = sum(AMOUNT),",
				"     columnNaming: '$N$V',",
				"     lateral: true) ~> pivot1",
				"source1 cast(output(",
				"          AMOUNT as integer",
				"     ),",
				"     errors: true) ~> cast1"
			]
		}
	}
}