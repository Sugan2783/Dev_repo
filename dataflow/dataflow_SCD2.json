{
	"name": "dataflow_SCD2",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ADLS_PARAM",
						"type": "DatasetReference"
					},
					"name": "source1"
				},
				{
					"dataset": {
						"referenceName": "SQLDB_CLOUD",
						"type": "DatasetReference"
					},
					"name": "source2"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "lookup1"
				},
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          INCIDENT_ID as string,",
				"          INCIDENT_LOCATION as string,",
				"          INCIDENT_DATE as date,",
				"          INCIDENT_DESCRIPTION as string,",
				"          INCIDENT_TYPE as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source(output(",
				"          INCIDENT_KEY as integer,",
				"          INCIDENT_ID as integer,",
				"          INCIDENT_LOCATION as string,",
				"          INCIDENT_DATE as date,",
				"          INCIDENT_DESCRIPTION as string,",
				"          INCIDENT_TYPE as string,",
				"          FLAG as string,",
				"          EFF_DATE as date,",
				"          END_DATE as date",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: 'select * from dbo.PROJECT_INCIDENT_DIM\\r\\nwhere flag = \\'Y\\'',",
				"     format: 'query') ~> source2",
				"source1, source2 lookup(ERROR_FUNCTION('') == ERROR_FUNCTION(''),",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> lookup1",
				"lookup1 derive() ~> derivedColumn1"
			]
		}
	}
}